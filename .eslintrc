{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true,
    "browser": true
  },
  "extends": ["airbnb-base", "plugin:markdown/recommended", "plugin:jsonc/recommended-with-jsonc", "plugin:yml/standard"],
  "plugins": ["markdown"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "no-console": "warn",
    "import/no-extraneous-dependencies": "off",
    "quotes": ["error", "backtick"],
    "indent": "error",
    "jsonc/auto": "error",
    "jsonc/comma-dangle": ["error", "never"]
  },
  "overrides": [
    {
      "files": ["**/*.md"],
      "processor": "markdown/markdown"
    },
    {
      "files": ["**/*.md/*.js"]
    },
    {
      "files": ["*.json"],
      "parser": "jsonc-eslint-parser"
    },
    {
      "files": ["*.yaml", "*.yml"],
      "parser": "yaml-eslint-parser",
      "parserOptions": {
        "defaultYAMLVersion": "1.2"
      }
    }
  ]
}
